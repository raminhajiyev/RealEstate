@model CreateEmployeeDto
@{
    ViewData["Title"] = "CreateEmployee";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Add New Employee</h6>
        <form method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">New Employee Name</label>
                <input type="text" class="form-control" asp-for="name">
                <br />
                <label for="exampleInputEmail1" class="form-label">Title</label>
                <input type="text" class="form-control" asp-for="title">
                <br />
                <label for="exampleInputEmail1" class="form-label">Phone</label>
                <input type="text" class="form-control" asp-for="phone">
                <br />
                <label for="exampleInputEmail1" class="form-label">Mail</label>
                <input type="text" class="form-control" asp-for="mail">
                <br />
                <label for="exampleInputEmail1" class="form-label">Image URL</label>
                <input type="text" class="form-control" asp-for="imageurl">
                <br />
                <label for="exampleInputEmail1" class="form-label">Status</label>
                <input type="text" class="form-control" asp-for="status">
                <br />
                <button type="submit" class="btn btn-primary">Save</button></div>

        </form>
    </div>
</div>
