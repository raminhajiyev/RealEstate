@model UpdatePopularLocationsDto

@{
    ViewData["Title"] = "UpdatePopularLocations";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Edit PopularLocation</h6>
        <form method="post">
            <div class="mb-3">
                <input type="hidden" class="form-control" asp-for="PopularLocationId">
                <br />
                <label for="exampleInputEmail1" class="form-label"> City Name</label>
                <input type="text" class="form-control" asp-for="CityName">
                <br />
                <label for="exampleInputEmail1" class="form-label"> ImageURL</label>
                <input type="text" class="form-control" asp-for="ImageUrl">
                <br />
                <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>
