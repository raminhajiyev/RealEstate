@model List<ResultPopularLocationsDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
    int count = 0;
}

<style>img{border-radius:50%;}</style>

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">PopularLocations Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">City</th>
                        <th scope="col">Remove</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td><img src="@item.ImageUrl" height="50" width="50"/>  @item.CityName</td>
                            <td><a href="/PopularLocations/DeletePopularLocations/@item.PopularLocationId" class="btn btn-outline-danger">Delete</a> </td>
                            <td><a href="/PopularLocations/UpdatePopularLocations/@item.PopularLocationId" class="btn btn-outline-success">Update</a> </td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/PopularLocations/CreatePopularLocations/" class="btn btn-primary">Add</a>
        </div>
    </div>
</div>
