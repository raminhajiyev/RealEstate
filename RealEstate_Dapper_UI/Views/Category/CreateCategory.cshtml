@model CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}
 
<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Add New Category</h6>
        <form method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">New Caegory Name</label>
                <input type="text" class="form-control" asp-for="CategoryName">
                <br/>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

