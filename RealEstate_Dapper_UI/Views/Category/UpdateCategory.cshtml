@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Edit Category</h6>
        <form method="post">
            <div class="mb-3">
                <input type="hidden" class="form-control" asp-for="CategoryId">
                <br />
                <label for="exampleInputEmail1" class="form-label"> Category Name</label>
                <input type="text" class="form-control" asp-for="CategoryName">
                <br />
                <label for="exampleInputEmail1" class="form-label"> Status</label>
                <input type="text" class="form-control" asp-for="CategoryStatus">
                <br />
                <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

