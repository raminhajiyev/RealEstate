@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Category Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Category</th>
                        <th scope="col">Status</th>
                        <th scope="col">Remove</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.CategoryId</th>
                            <td>@item.CategoryName</td>
                            <td>@item.CategorySatus</td>
                            <td><a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Delete</a> </td>
                            <td><a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Update</a> </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
            <br />
            <a href="/Category/CreateCategory/" class="btn btn-primary">Add</a>
        </div>
    </div>
</div>

