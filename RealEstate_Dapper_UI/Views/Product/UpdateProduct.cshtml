@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}

<div class="col-sm-12 col-xl-6">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Edit Product</h6>
        <form method="post">
            <div class="mb-3">
                <input type="hidden" class="form-control" asp-for="productId">
                <br />
                <label class="form-label"> Title</label>
                <input type="text" class="form-control" asp-for="title">
                <br />
                <label class="form-label">Price </label>
                <input type="text" class="form-control" asp-for="price">
                <br />
                <label class="form-label">District </label>
                <input type="text" class="form-control" asp-for="district">
                <br />
                <label class="form-label">City </label>
                <input type="text" class="form-control" asp-for="city">
                <br />
                <label class="form-label">District </label>
                <input type="text" class="form-control" asp-for="district">
                <br />
                <label class="form-label">Description </label>
                <input type="text" class="form-control" asp-for="description">
                <br />
                <label class="form-label">Image </label>
                <input type="text" class="form-control" asp-for="coverImage">
                <br />
                <label class="form-label">Category Name </label>
                <input type="text" class="form-control" asp-for="categoryName">
                <br />
                <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div> 


