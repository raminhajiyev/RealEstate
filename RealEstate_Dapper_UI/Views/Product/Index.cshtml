@model List<ResultProductDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
}
<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Category Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Price</th>
                        <th scope="col">City</th>
                        <th scope="col">District</th>
                        <th scope="col">Category</th>
                        <th scope="col">Description</th>
                        <th scope="col">Image</th>
                        <th scope="col">Remove</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.productId</th>
                            <td>@item.title</td>
                            <td>@item.price</td>
                            <td>@item.city</td>
                            <td>@item.district</td>
                            <td>@item.categoryName</td>
                            <td>@item.description</td>
                            <td>@item.coverImage.Substring(0, 5) ...</td>
                            <td><a href="/Category/DeleteCategory/@item.productId" class="btn btn-outline-danger">Delete</a> </td>
                            <td><a href="/Category/UpdateCategory/@item.productId" class="btn btn-outline-success">Update</a> </td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/Product/CreateProduct/" class="btn btn-primary">Add</a>
        </div>
    </div>
</div>
