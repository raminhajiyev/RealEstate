@model List<ResultWhoWeAreDetailDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/AdminLayout.cshtml";
    int count = 0;
}

<div class="col-12">
    <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">WhoWeAreDetail Table</h6>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Subtitle</th>
                        <th scope="col">Description 1</th>
                        <th scope="col">Description 2</th>
                        <th scope="col">Remove</th>
                        <th scope="col">Edit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Title</td>
                            <td>@item.Subtitle.Substring(0, 5)...</td>
                            <td>@item.Description1.Substring(0,5)...</td>
                            <td>@item.Description2.Substring(0, 5)...</td>
                            <td><a href="/WhoWeAre/DeleteWhoWeAreDetail/@item.WhoWeAreDetailId" class="btn btn-outline-danger">Delete</a> </td>
                            <td><a href="/WhoWeAre/UpdateWhoWeAreDetail/@item.WhoWeAreDetailId" class="btn btn-outline-success">Update</a> </td>
                        </tr>
                    }

                </tbody>
            </table>
            <br />
            <a href="/WhoWeAre/CreateWhoWeAreDetail/" class="btn btn-primary">Add</a>
        </div>
    </div>
</div>

